@model Mgm.VI.Aws.Sqs.Models.QueueModel

@{
  ViewData["Title"] = "Create";
}

<h2>Create</h2>
<h4>After Submit, wait 30 seconds for get update from AWS</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="QueueName" class="control-label"></label>
        <input asp-for="QueueName" class="form-control" />
        <span asp-validation-for="QueueName" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
